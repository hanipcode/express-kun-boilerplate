  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "env": {
        "ENV": "test",
        "DEBUGGER": true
      },
      "request": "launch",
      "name": "Jest Test Single Run All",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": ["--verbose", "-i", "--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "env": {
        "ENV": "test",
        "DEBUGGER": true
      },
      "request": "launch",
      "name": "Jest watch all tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": ["--verbose", "-i", "--watchAll", "--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "env": {
        "ENV": "test",
        "DEBUGGER": true
      },
      "request": "launch",
      "name": "Jest watch Changed File",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": ["--watch", "--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "env": {
        "ENV": "test",
        "DEBUGGER": true
      },
      "request": "launch",
      "name": "Jest watch current file",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "${fileBasename}",
        "--verbose",
        "-i",
        "--watchAll",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
